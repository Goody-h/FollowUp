<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ng.com.hybrid.followup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/noticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/noticon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CommentsActivity">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SlideActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".IntroScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBarFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SignUp"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditProfile"
            android:theme="@style/AppTheme" />
        <activity android:name=".UserDetails"
            android:theme="@style/AppTheme"
            />
    </application>

</manifest>