<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/freegrad"
                >

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bac"
                    android:background="#399cff"
                    android:id="@+id/bac"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilepic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    />

                <ng.com.hybrid.followup.MyTextView
                    android:id="@+id/tvusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="150dp"
                    android:textColor="@color/white"
                    android:text="Tristan kluivert"
                    android:textSize="20sp"
                    />

            </RelativeLayout>


           <android.support.v7.widget.CardView
               android:layout_width="300dp"
               android:layout_height="100dp"
               android:layout_marginTop="250dp"
               app:cardElevation="10dp"
               android:layout_gravity="center_horizontal"
               >

               <ng.com.hybrid.followup.MyTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Name"
                   android:textSize="25sp"
                   android:layout_marginTop="5dp"
                   android:textStyle="bold"
                   />


               <ng.com.hybrid.followup.MyTextView
                   android:id="@+id/tvrealname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Edegware  kluivert"
                   android:layout_marginTop="50dp"
                   android:textColor="@color/colorPrimary"
                   android:textSize="20sp"
                   />

           </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="130dp"
                android:layout_width="280dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/ic_location_city_blue"
                        android:layout_marginStart="50dp"
                        />
                    <ng.com.hybrid.followup.MyTextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Delta state"
                        android:textSize="18sp"
                        android:id="@+id/tvstate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/ic_account_circle_blue"
                        android:layout_marginStart="50dp"
                        />
                    <ng.com.hybrid.followup.MyTextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Male"
                        android:textSize="18sp"
                        android:id="@+id/tvgender" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/ic_date_range_blue"
                        android:layout_marginStart="50dp"
                        />
                    <ng.com.hybrid.followup.MyTextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="05/4/2019"
                        android:textSize="18sp"
                        android:id="@+id/tvdate" />

                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/btedit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="580dp"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:text="Edit"
                />

        </android.support.v7.widget.CardView>




    </RelativeLayout>


